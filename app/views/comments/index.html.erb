<h1>Listing comments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Client</th>
    <th>Contact</th>
    <th>Author</th>
    <th>Email</th>
    <th>Ip</th>
    <th>Url</th>
    <th>Body</th>
    <th>Published</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.user_id %></td>
    <td><%= comment.client_id %></td>
    <td><%= comment.contact_id %></td>
    <td><%= comment.author %></td>
    <td><%= comment.email %></td>
    <td><%= comment.ip %></td>
    <td><%= comment.url %></td>
    <td><%= comment.body %></td>
    <td><%= comment.published %></td>
    <td><%= comment.post_id %></td>
    <td><%= link_to 'Destroy', [@post, comment], confirm: 'Are you sure?', method: :delete %></td>
    

    
    
    
  </tr>
<% end %>
</table>

